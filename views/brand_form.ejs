<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <div class="container-fluid">
        <div class="row">
            <%- include('./partials/navbar')  %>
            <div class="col-sm-10">
                <h1 style="text-align: center;"><%= title %></h1>
                <form action="/inventory/brand/create" method="POST">
                    <div class="form-group">
                        <label for="name">Name: </label>
                        <input class="form-control" type="text" name="name" value="<%= locals.newBrand ? newBrand.name : ""%>">
                    </div>
                    <div class="form-group">
                        <label for="website">Website: </label>
                        <input class="form-control" type="text" name="website" value="<%= locals.newBrand ? decodeURIComponent(newBrand.website) : ""%>">
                    </div>
                    <div class="form-group">
                        <label for="password">Admin Password: </label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                    <button class="btn btn-primary" type="Submit">Save Brand</button>
                </form>
                <hr>
                <% if (locals.errors) { %>
                    <% for (let x=0; x<errors.length; x++) { %>
                        <p><%= errors[x].msg %></p>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>